                    , ExactNu
                    , Equivalence
    build-depends:    base ^>=4.14 || ^>=4.15 || ^>=4.16 || ^>=4.17 || ^>=4.18 || ^>=4.19
                    , containers
    hs-source-dirs:   src
    default-language: Haskell2010
    ghc-options:      -Wall -O2

